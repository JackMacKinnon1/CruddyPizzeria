<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_screen"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:background="#FFBA08"
            android:gravity="center"
            android:paddingVertical="17dp">

            <TextView
                android:id="@+id/cruddyPizzaHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Cruddy Pizzeria"
                android:textColor="#FCF7F8"
                android:textSize="35dp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/orderNumberLookUpTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/inter_bold"
                android:text="Please select an option to start"
                android:textColor="#000000"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/table_background"
                android:shrinkColumns="1,2"
                android:stretchColumns="1,2">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/placeOrderBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#F0BA2F"
                        android:fontFamily="@font/inter_bold"
                        android:text="Place an order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />

                    <Button
                        android:id="@+id/viewOrderBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#F0BA2F"
                        android:fontFamily="@font/inter_bold"
                        android:text="View an order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/changeOrderBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#F0BA2F"
                        android:fontFamily="@font/inter_bold"
                        android:text="Change an order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />

                    <Button
                        android:id="@+id/cancelOrderBtn"
                        android:layout_width="0dp"
                        android:layout_height="85dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#F0BA2F"
                        android:fontFamily="@font/inter_bold"
                        android:text="Cancel an order"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/viewAllOrdersBtn"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="10dp"
                        android:layout_weight="50"
                        android:backgroundTint="#F0BA2F"
                        android:fontFamily="@font/inter_bold"
                        android:text="View all orders"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:cornerRadius="15dp" />
                </TableRow>

            </TableLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/table_background"
                android:gravity="center">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/languageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="50dp"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/language"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/languageSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:text="@string/english"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                </TableRow>

            </TableLayout>
        </TableRow>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>